{
  "id": "switchworkflow",
  "name": "switch-wf",
  "version": "1.0",
  "states":[
    {
      "name":"AddInfo",
      "type":"inject",
      "start": {
        "kind": "default"
      },
      "data": {
        "person": {
          "name": "john",
          "age": 25
        }
      },
      "transition": {
        "nextState": "ChooseOnAge"
      }
    },
    {
      "name": "ChooseOnAge",
      "type": "switch",
      "dataConditions": [
        {
          "condition": "{{ $.person[?(@.age >= 18)] }}",
          "transition": {
            "nextState": "Approve"
          }
        },
        {
          "condition": "{{ $.person[?(@.age < 18)] }}",
          "transition": {
            "nextState": "Deny"
          }
        }
      ],
      "default": {
        "transition": {
          "nextState": "Approve"
        }
      }
    },
    {
      "name":"Approve",
      "type":"inject",
      "data": {
        "decision": "Approved"
      },
      "end": {
        "kind": "default"
      }
    },
    {
      "name":"Deny",
      "type":"inject",
      "data": {
        "decision": "Denied"
      },
      "end": {
        "kind": "default"
      }
    }
  ]
}